<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>

    <!-- The array of apps to install (usually just one) -->
    <key>items</key>
    <array>
      <dict>

        <!-- ---------- ASSETS (IPA + icons) ---------- -->
        <key>assets</key>
        <array>

          <!-- IPA file -->
          <dict>
            <key>kind</key>
            <string>software-package</string>
            <key>url</key>
            <string>https://fortnite-ios.com/Signed.ipa</string>
          </dict>

          <!-- 57 × 57 icon (display-image) -->
          <dict>
            <key>kind</key>
            <string>display-image</string>
            <key>needs-shine</key>
            <true/>
            <key>url</key>
            <string>https://lh3.googleusercontent.com/NhxCnxNPa-YgQKvORphS7fawkrY64biE4pHJcvPptZM4axwGX2Ms6D02ttQmcvLk8u1y</string>
          </dict>

          <!-- 512 × 512 icon (full‑size) -->
          <dict>
            <key>kind</key>
            <string>full-size-image</string>
            <key>needs-shine</key>
            <true/>
            <key>url</key>
            <!-- Replace with a real 512×512 PNG if available -->
            <string>https://fortnite-ios.com/AppIcon512.png</string>
          </dict>

        </array>

        <!-- ---------- METADATA ---------- -->
        <key>metadata</key>
        <dict>
          <key>bundle-identifier</key>
          <string>com.epicgames.FortniteGame</string>

          <key>bundle-version</key>
          <string>1.0</string>

          <key>kind</key>
          <string>software</string>

          <key>title</key>
          <string>Fortnite</string>
        </dict>

      </dict>
    </array>

  </dict>
</plist>
